<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodStock01;assembly=FoodStock01"
             xmlns:toolkit="clr-namespace:FoodStock01;assembly=FoodStock01"
             x:Name="FoodPage"
             x:Class="FoodStock01.FoodPage1">

    <ContentPage.BindingContext>
        <local:FoodPageViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start"
                     Margin="20, 10, 20, 10">

            <Button Image="search24.png"
                    Text="レシピ検索"
                    HorizontalOptions="End"
                    Clicked="OnSearch_Clicked"/>

            <Grid Padding="10,20,10,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="食材名" 
                       BackgroundColor="Transparent"
                       Grid.Column="0" Grid.Row="0"/>
                <Label Text="消費期限・賞味期限" 
                       BackgroundColor="Transparent"
                       Grid.Column="1" Grid.Row="0"/>
                <Label Text="レシピ使用" 
                       BackgroundColor="Transparent"
                       Grid.Column="2" Grid.Row="0"
                       HorizontalOptions="End"/>
                
            </Grid>

            <ListView HasUnevenRows="true"
                  ItemsSource="{Binding Magics}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10,20,10,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}" 
                                   Grid.Column="0" Grid.Row="0"
                                   FontSize="Large"/>
                                <Grid Grid.Column="1" Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Date}" 
                                       Grid.Column="0" Grid.Row="0"
                                       HorizontalOptions="End"
                                       FontSize="Large"/>
                                    <Label Text="日" 
                                       Grid.Column="1" Grid.Row="0"
                                       HorizontalOptions="Start"
                                       VerticalOptions="End"/>
                                </Grid>

                                <!--<Button Text="{Binding Name}" 
                                        Grid.Column="2" Grid.Row="0" 
                                        Clicked="OnButtonClicked"/>-->

                                <toolkit:CheckBox CheckedChanged="ChackBoxChanged" 
                                                  Grid.Column="2" Grid.Row="0"
                                                  HorizontalOptions="End"
                                                  VerticalOptions="Center"
                                                  Text="{Binding Name}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>